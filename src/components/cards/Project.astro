---
import Paragraph from '../shared/Paragraph.astro';

export interface Props{
    title:string,
    image: string
    description:string,
    url:string
}

const {title, description, image, url} = Astro.props
---
<div class="p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden">
    <div class="flex justify-center items-center mx-auto rounded-xl dark:shadow-blue-900 dark:shadow-lg  shadow-lg p-3  text-heading-1 w-max relative hover:cursor-pointer hover:scale-105 transition-all ease-in-out duration-300">
        <a href={url} target="_blank">
            <img src={image} alt={title} class="rounded-md object-cover w-72 sm:w-48 md:w-64 hover:scale-105 transition-all duration-500 ease-in-out">
        </a>
    </div>
    <div class="mt-6 space-y-4 relative">
        <h2 class="text-lg md:text-xl font-semibold text-heading-2">
            {title}
        </h2>
        <Paragraph>
            {description}
        </Paragraph>
    </div>
    <span class="absolute w-32 aspect-square -bottom-16 -right-16 bg-primary/10 rounded-full"></span>
</div>